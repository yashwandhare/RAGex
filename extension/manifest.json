{
  "manifest_version": 3,
  "name": "RAGex Companion",
  "version": "2.1.0",
  "description": "Smart web analysis and Q&A powered by RAGex - Your intelligent browsing companion",
  "author": "RAGex Team",
  "permissions": [
    "sidePanel",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_title": "RAGex Companion"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}